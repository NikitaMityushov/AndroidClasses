<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".GeoActivity">

    <TextView
        android:id="@+id/id_tw_enter_location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/enter_the_location"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/id_et_address_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_tw_enter_location_label"
        android:hint="@string/write_the_location"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/id_b_show_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_et_address_field"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/b_show_map"
        android:layout_margin="16dp"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>